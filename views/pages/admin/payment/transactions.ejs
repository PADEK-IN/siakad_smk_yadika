<%- include ('./../../../components/head.ejs')%>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

        <!-- sidebar start -->
        <%- include ('./../../../components/sidebar-admin.ejs')%>
        <!-- sidebar end -->

        <div class="content">
            <!-- navbar start -->
            <%- include ('./../../../components/navbar-admin.ejs')%>
            <!-- navar end -->

            <div class="container-fluid pt-4 px-4 pb-5">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">List Transaksi</h6>
                    <!-- <div>
                        <a class="btn btn-sm btn-primary" href="/admin/payment/add">Buat SPP</a>
                    </div> -->
                </div>
                <div class="bg-light text-center rounded p-4">
                    <div class="table-responsive">
                    
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Kelas</th>
                                    <th>Periode</th>
                                    <th>Nominal</th>
                                    <th>Nama Siswa</th>
                                    <th>Tanggal Bayar</th>
                                    <th>Bukti Bayar</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(const transaksi of data) { %>
                                <tr>
                                    <td><%= transaksi.Spp.tingkat %></td>
                                    <td><%= transaksi.Spp.periode %></td>
                                    <td><%= transaksi.Spp.nominal %></td>
                                    <td><%= transaksi.Murid.nama %></td>
                                    <td><%= transaksi.tanggal_bayar %></td>
                                    <td><img src="/images/<%= transaksi.bukti_bayar %>" alt="foto" width="25px"></td>
                                    <td>
                                        <% if(transaksi.isValid) { %>
                                            <span class="badge bg-success">Valid</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Tidak Valid</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/admin/payment/transaction/32789/accept" class="bi bi-pencil-square px-2"></a>
                                        <a href="#" onclick="del('<%= transaksi.id %>', '<%= transaksi.murid.nama %>')" class="bi bi-archive px-2" style="color: red;"></a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Kelas</th>
                                    <th>Periode</th>
                                    <th>Nominal</th>
                                    <th>Nama Siswa</th>
                                    <th>Tanggal Bayar</th>
                                    <th>Bukti Bayar</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <%- include ('./../../../components/script.ejs')%>

    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script> -->
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.bootstrap5.js"></script>
    <script>
        new DataTable('#example');
        function del(id, nama) {
            const isSure = confirm(`Kamu yakin ingin menghapus data transaksi ${nama}`);
            if(isSure){
                $.ajax({
                    url: `/api/admin/transaksi/${id}`,
                    method: "DELETE",
                    success: (response) => {
                        alert(response.status.message);
                        window.location.reload();
                    },
                    error: (response) => {
                        const message = response.responseJSON.status.message;
                        alert(message);
                    }
                });
            }
        }
    </script>
</body>

</html>