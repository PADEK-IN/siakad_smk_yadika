<%- include ('./../../../components/head.ejs')%>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

        <!-- sidebar start -->
        <%- include ('./../../../components/sidebar-admin.ejs')%>
        <!-- sidebar end -->

        <div class="content">
            <!-- navbar start -->
            <%- include ('./../../../components/navbar-admin.ejs')%>
            <!-- navar end -->

            <div class="container-fluid pt-4 px-4 pb-5">
                <div class="d-flex mb-4">
                    <a href="/admin/class" class="d-inline-flex text-decoration-nonebi bi-arrow-left pr-4"></a>
                    <h6 class="px-3">Kembali</h6>
                </div>
                <div class="bg-light  rounded p-4">
                    <div class="alert text-center alert-primary" role="alert">
                        Buat Data Kelas
                    </div>

                    <!-- form Student -->
                    <div class="bg-light rounded h-100 px-4">
                        <form>
                            <!-- Tingkat -->
                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect"
                                    aria-label="Floating label select example">
                                    <option selected undefined disabled>Tingkat</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                                <label for="floatingSelect">Tingkat</label>
                            </div>
                            <div class="mb-3">
                                <label for="inputCode" class="form-label">Kelas</label>
                                <input type="text" class="form-control" id="inputCode">
                            </div>

                            <tr>
                                <td>kelas</td>
                                <td>nama</td>
                                <td>nama</td>
                                <td>nama</td>
                            </tr>
                            <% for (const [data] of guru.entries()) { %>
                                <tr>
                                    <td><%= data.id %></td>
                                    <td><%= data.nama %></td>
                                </tr>
                                <!-- <p><%= data.nama %></p>
                                <p>Lorem, ipsum.</p> -->
                            <% } %>
                            <!-- Wali Kelas -->
                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect"
                                    aria-label="Floating label select example">
                                    <option selected undefined disabled>Wali Kelas</option>
                                    <!-- <% for (const [data] of guru.entries()) { %>
                                    <option value="<%= data.id %>"><%= data.nama %></option>
                                    <% } %> -->
                                    <!-- <option value="Sri Hartanto, S.Pd">Sri Hartanto, S.Pd</option>
                                    <option value="Sri Hartanto, S.Pd">Sri Hartanto, S.Pd</option>
                                    <option value="Sri Hartanto, S.Pd">Sri Hartanto, S.Pd</option> -->
                                </select>
                                <label for="floatingSelect">Wali Kelas</label>
                            </div>
                            <div class="mb-3">
                                <label for="inputCode" class="form-label">Tahun</label>
                                <input type="number" class="form-control" id="inputCode" min="1900" max="2099">
                            </div>


                            <button type="submit" class="btn btn-primary">Simpan</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ('./../../../components/script.ejs')%>

    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script> -->
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.bootstrap5.js"></script>
    <script>
        new DataTable('#example');

        $("#add-class").on("click", () => {
        const nama = $("#nama").val();
        const tingkat = $("#tingkat").val();
            $.ajax({
                url: "/api/admin/mata-pelajaran",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({nama, tingkat}),
                success: (response) => {
                    alert(response.status.message);
                    console.log({nama, tingkat});
                    return window.location.href = `/admin/mapel`;
                },
                error: (response) => {
                    const message = response.responseJSON.status.message
                    alert(message);
                }
            });
        });
    </script>
</body>

</html>